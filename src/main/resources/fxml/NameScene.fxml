<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.PSP25.Client.GUI.NameSceneController">
    <children>
        <ImageView fitHeight="900.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/SchermataLogin.png"/>
            </image>
        </ImageView>
        <Label fx:id="questionLabel" alignment="CENTER" layoutX="164.0" layoutY="418.0" prefHeight="64.0"
               prefWidth="861.0" textFill="WHITE">
            <font>
                <Font size="23.0"/>
            </font>
        </Label>
        <TextField fx:id="nameTextField" layoutX="420.0" layoutY="502.0" prefHeight="48.0" prefWidth="334.0">
            <font>
                <Font size="20.0"/>
            </font>
        </TextField>
        <Label fx:id="errorLabel" alignment="CENTER" layoutX="271.0" layoutY="579.0" prefHeight="48.0" prefWidth="632.0"
               textFill="WHITE">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Label fx:id="waitingLabel" alignment="CENTER_RIGHT" layoutX="719.0" layoutY="775.0" prefHeight="53.0"
               prefWidth="477.0" text="Waiting for other players.." textFill="WHITE" visible="false">
            <font>
                <Font size="28.0"/>
            </font>
        </Label>
        <ImageView fx:id="confirmImage" fitHeight="150.0" fitWidth="200.0" layoutX="487.0" layoutY="641.0"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/ConfirmUnpressed.png"/>
            </image>
        </ImageView>
        <Button fx:id="okButton" layoutX="490.0" layoutY="644.0" mnemonicParsing="false" onAction="#handleButton"
                opacity="0.0" prefHeight="46.0" prefWidth="193.0" text="OK"/>
    </children>
</AnchorPane>
