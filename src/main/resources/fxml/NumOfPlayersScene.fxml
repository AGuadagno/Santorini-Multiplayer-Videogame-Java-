<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.polimi.ingsw.PSP25.Client.GUI.NumOfPlayersSceneController">
    <children>
        <ImageView fitHeight="900.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/SchermataLogin.png"/>
            </image>
        </ImageView>
        <Label fx:id="SelectNumOfPlayers" alignment="CENTER" layoutX="83.0" layoutY="495.0" prefHeight="69.0"
               prefWidth="1035.0" text="Select the number of players:" textFill="WHITE" visible="false">
            <font>
                <Font size="27.0"/>
            </font>
        </Label>
        <Label fx:id="ConnectionMessage" alignment="CENTER" layoutX="307.0" layoutY="373.0" prefHeight="28.0"
               prefWidth="587.0" textFill="WHITE">
            <font>
                <Font size="22.0"/>
            </font>
        </Label>
        <ImageView fx:id="image2Players" fitHeight="150.0" fitWidth="200.0" layoutX="380.0" layoutY="635.0"
                   pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="@../img/Button2playersunpressed.png"/>
            </image>
        </ImageView>
        <ImageView fx:id="image3Players" fitHeight="150.0" fitWidth="200.0" layoutX="620.0" layoutY="635.0"
                   pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="@../img/button3playersunpressed.png"/>
            </image>
        </ImageView>
        <Button fx:id="Button2Players" layoutX="383.0" layoutY="636.0" mnemonicParsing="false"
                onAction="#handleButton2Players" opacity="0.0" prefHeight="46.0" prefWidth="195.0" text="2 players"/>
        <Button fx:id="Button3Players" layoutX="623.0" layoutY="636.0" mnemonicParsing="false"
                onAction="#handleButton3Players" opacity="0.0" prefHeight="46.0" prefWidth="195.0" text="3 Players"/>
        <Label fx:id="waitingLabel" alignment="CENTER_RIGHT" layoutX="709.0" layoutY="765.0" prefHeight="53.0"
               prefWidth="477.0" text="Waiting for other players.." textFill="WHITE" visible="false">
            <font>
                <Font size="28.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
